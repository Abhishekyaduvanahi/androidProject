<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E90FF"

    tools:context=".WeatherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:hint="Enter city name "
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableStart="@drawable/city"
            android:layout_marginStart="25dp"
            android:id="@+id/editTextCityName"
            android:inputType="textPersonName"
            >


        </EditText>
     <Button
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:background="@drawable/search"
         android:layout_marginStart="7dp"
         android:id="@+id/search"
        >


     </Button>

    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/linear_layout_weather"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/textViewCityWeather"
               android:layout_gravity="center"
               android:layout_margin="7dp"
               android:text="London ,GB "
               android:textSize="30sp"
               android:textColor="#FFFFFF"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginStart="25dp"
               android:scaleType="fitXY" >

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_launcher_background"
                   android:layout_marginStart="25dp"
                   android:scaleType="fitXY"
                   android:id="@+id/imageViewWeather"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/textViewTempWeather"
                       android:text="25 C"
                       android:textSize="50sp"
                       android:textColor="#FFFFFF"
                       android:layout_gravity="center"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/textViewWeatherConditionWeather"
                       android:text="Few Clouds "
                       android:textSize="30sp"
                       android:textColor="#FFFFFF"
                       android:textAlignment="center"

                       />




               </LinearLayout>


           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Details :"
               android:textSize="30sp"
               android:textColor="#FFFFFF"
               android:layout_marginStart="25dp"
               android:layout_marginBottom="10dp"
               ></TextView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="Humidity"
                       android:textColor="#FFFFFF"
                       android:id="@+id/textViewHumidityWeather"
                       android:textSize="24sp" />


                   <TextView
                       android:id="@+id/textViewMaxTempWeather"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="Max Temp."
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"

                       />


                   <TextView
                       android:id="@+id/textViewMinTempWeather"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="Min Temp."
                       android:textColor="#FFFFFF"

                       android:textSize="24sp" />


                   <TextView
                       android:id="@+id/textViewPressureWeather"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="Pressure"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp" />


                   <TextView
                       android:id="@+id/textViewWindWeather"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="Wind"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:orientation="vertical"
                   android:layout_marginTop="5dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="50%"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"
                       android:layout_marginTop="5dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="25 C"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"
                       android:layout_marginTop="5dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="50 C"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"
                       android:layout_marginTop="5dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="50"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"
                       android:layout_marginTop="5dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="5"
                       android:textColor="#FFFFFF"
                       android:textSize="24sp"
                       android:layout_marginTop="5dp" />

               </LinearLayout>
           </LinearLayout>



       </LinearLayout>



</LinearLayout>